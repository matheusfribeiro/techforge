<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
               http://java.sun.com/xml/ns/persistence
               http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="techforge.jpa">


        <class>com.techforge.models.Course</class>
        <class>com.techforge.models.Subcategory</class>
        <class>com.techforge.models.Category</class>

        <properties>

            <property name="jakarta.persistence.jdbc.url"      value="jdbc:mysql://localhost:3306/tech_forge"/>
            <property name="jakarta.persistence.jdbc.user"     value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver"   value="com.mysql.cj.jdbc.Driver"/>


            <property name="hibernate.show_sql"    value="true"/>
            <property name="hibernate.format_sql"  value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
